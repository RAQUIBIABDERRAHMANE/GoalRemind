# Database
DATABASE_URL=./data/goalremind.db

# Push Notifications VAPID Keys
# Generate with: npx tsx scripts/generate-vapid-keys.ts
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# Job API Secret
# Generate with: npx tsx scripts/generate-job-secret.ts
JOB_API_SECRET=your_secret_token_here

# Notification Check Interval (in minutes)
# How often the job should look for due reminders
NOTIFICATION_CHECK_MINUTES=5
